<h2>Total number of stops</h2>
<form action="/trip" method="get">
  <input type="hidden" name="line" value="<%= params[:line] %>">
  <input type="hidden" name="start" value="<%= params[:start] %>">
  <input type="hidden" name="end" value="<%= params[:end] %>">
  <select class="" name="end">
    <% @num_stops.each do |num_stops| %>
    <option> <%= num_stops %> </option>
    <% end %>
  </select>
  <button type="submit">Submit</button>
</form>
